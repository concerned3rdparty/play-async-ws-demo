# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /deal/:id                   controllers.Deals.deal(id: Int)

GET     /topdeal/:id                controllers.Deals.topdeal(id: Int)

GET     /deal/overview/:city        controllers.Deals.dealOverview(city)

GET     /deal/overview/:city/tsv    controllers.Deals.dealOverviewTsv(city)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
